<p style="color: green"><%= notice %></p>

<h1 class="font-bold text-purple-900 text-3xl mb-3">Bands</h1>

<%= form_with(url: bands_path, method: :get, data: { controller: "search-form", turbo_frame: "bands", turbo_action: "advance"}) do |form| %>
  <%= form.label :query, "Search band by name", class: "block mb-2" %>
  <div class="flex space-x-3">
  <%= form.text_field :query, class: "py-3 px-4 rounded border ring-0 focus:ring-4 focus:ring-purple-100 focus:shadow-none focus:border-purple-500 focus:outline-none", data: { action: "input->search-form#search"} %>

  <%= form.submit "Search", class: "px-4 py-3 font-medium bg-purple-400 text-neutral-700 rounded inline-flex items-center cursor-pointer hover:bg-purple-500 focus:ring-4 ring-0 focus:ring-purple-200" %>
  </div>

  <% end %>
  
  

<div class="my-16">
  <%= render "bands", bands: @bands %>
</div>

<%= link_to "New band", new_band_path, class: "px-4 py-3 font-medium bg-purple-400 text-neutral-700 rounded inline-flex items-center cursor-pointer hover:bg-purple-500 focus:ring-4 ring-0 focus:ring-purple-200" %>
